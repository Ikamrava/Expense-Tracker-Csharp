@model Expense_Traker_Csharp.Models.VMLogin
@* @model Expense_Traker_Csharp.Views.Account.Login *@
@{
    Layout = null;

}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container login-container">
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h3>Login</h3>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Email *" asp-for="Email" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password *" asp-for="Password" />
                </div>
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked
                    asp-for="RememberMe" />
                <label class="form-check-label" for="form2Example31"> Remember me </label>


                <div class="form-group">
                    <input type="submit" class="btnSubmit" />
                </div>



            </form>
        </div>

    </div>
</div>